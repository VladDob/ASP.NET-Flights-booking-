@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<partial name="_StatusMessage" model="Model.StatusMessage" />

<h1> @UserManager.GetUserName(User)</h1>

<div class="container">
    <h4>@ViewData["Title"]</h4>
    <form id="profile-form" method="post">
        <div style="display: none" asp-validation-summary="All"></div>

        <label style="float:left" asp-for="Username"></label>
        <input asp-for="Username" />

        <label style="float:left" asp-for="Input.PhoneNumber"></label>
        <input asp-for="Input.PhoneNumber"  />
        <span style="color: red; font-size:11px; float:left" asp-validation-for="Input.PhoneNumber" ></span>

        <input id="update-profile-button" value="Save" type="submit" class="registerbtn">
    </form>
    <form style="text-align:center; margin-top: 0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <input value="Logout" type="submit" class="registerbtn">
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


