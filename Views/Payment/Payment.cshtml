@{
    ViewData["Title"] = "Payment";
}

    
<div class="square">
    <form>
        <h1>Payment</h1>
        <p>Please fill in the payment information.</p>

        <div class="FirstName">
            <label for="FirstName"><b></b></label>
            <input type="text" placeholder="First Name" name="FirstName" id="FirstName" required>
        </div>
        <div class="LastName">
            <label for="LastName"><b></b></label>
            <input type="text" placeholder="Last Name" name="LastName" id="LastName" required>
        </div>

        <div class="phone">
            <label for="MobilePhoneNumber"><b></b></label>
            <input type="text" placeholder="Mobile Phone Number" name="MobilePhoneNumber" id="MobilePhoneNumber" required>
        </div>


        <label for="email"><b></b></label>
        <input type="text" placeholder="Email" name="email" id="email" required>

        <label for="psw"><b></b></label>
        <input type="password" placeholder="Payment Method" name="PaymentMethod" id="PaymentMethod" required>

        <label for="psw-repeat"><b></b></label>
        <input type="password" placeholder="Payment Time" name="PaymentTime" id="PaymentTime" required>

        <input type="submit" value="Make Reservation">
        <br>
        <input type="submit" value="Cancel">


    </form>
</div>
    

